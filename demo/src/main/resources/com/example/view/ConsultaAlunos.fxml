<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.ConsultaAlunosController" stylesheets="@../style.css">
    <top>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <Label text="Consulta de Alunos">
                    <styleClass>
                        <String fx:value="label" />
                        <String fx:value="titulo-janela" />
                    </styleClass>
                </Label>
            </children>
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <TableView fx:id="alunosTableView" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn prefWidth="250.0" text="Nome Completo">
                    <cellValueFactory>
                        <PropertyValueFactory property="nomeCompleto" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="150.0" text="CPF">
                    <cellValueFactory>
                        <PropertyValueFactory property="cpf" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="150.0" text="Data de Nascimento">
                    <cellValueFactory>
                        <PropertyValueFactory property="dataNascimento" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="240.0" text="ResponsÃ¡vel">
                    <cellValueFactory>
                        <PropertyValueFactory property="responsavel" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
            <children>
                <Button onAction="#onFechar" prefWidth="120.0" text="Fechar" styleClass="cancel-button" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>