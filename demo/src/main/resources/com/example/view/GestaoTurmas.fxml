<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?> <?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1010.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.GestaoTurmasController">
    
    <top>
        <VBox spacing="20.0">
            <children>
                <Label text="Gestão de Turmas" styleClass="titulo-janela" />
                <HBox spacing="20.0">
                    <children>
                        <Button onAction="#onCadastrarNovaTurma" text="Cadastrar Nova Turma" styleClass="acao-rapida-button">
                        <graphic><FontAwesomeIconView glyphName="PLUS" styleClass="acao-rapida-icon" size="1.5em"/></graphic>
                        </Button>
                        
                        <Button onAction="#onDefinirHorarios" text="Definir Horários" styleClass="acao-rapida-button">
                        <graphic><FontAwesomeIconView glyphName="CALENDAR" styleClass="acao-rapida-icon" size="1.5em"/></graphic>
                        </Button>
                        
                        <Button onAction="#onConsultarHorarios" text="Consultar Horários" styleClass="acao-rapida-button">
                        <graphic><FontAwesomeIconView glyphName="CLOCK_O" styleClass="acao-rapida-icon" size="1.5em"/></graphic>
                        </Button>
                        
                    </children>
                </HBox>
                                
                <Label text="Consulta de Turmas" style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #2c3e50;" />
                <TextField fx:id="searchField" maxWidth="400.0" promptText="Buscar por nome da turma, curso, turno..." />
            </children>
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="30.0" />
            </padding>
        </VBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.60" BorderPane.alignment="CENTER">
            
            <VBox spacing="5.0">
                <children>
                    <Label text="Turmas Cadastradas" style="-fx-font-size: 16px; -fx-padding: 0 0 5 0;" />
                    <TableView fx:id="turmasTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn prefWidth="200.0" text="Nome da Turma">
                                <cellValueFactory><PropertyValueFactory property="nome" />
                            </cellValueFactory></TableColumn>
                            <TableColumn prefWidth="250.0" text="Curso">
                                <cellValueFactory><PropertyValueFactory property="curso" />
                            </cellValueFactory></TableColumn>
                            <TableColumn prefWidth="150.0" text="Período Letivo">
                                <cellValueFactory><PropertyValueFactory property="periodoLetivo" />
                            </cellValueFactory></TableColumn>
                            <TableColumn prefWidth="100.0" text="Turno">
                                <cellValueFactory><PropertyValueFactory property="turno" />
                            </cellValueFactory></TableColumn>
                            <TableColumn prefWidth="100.0" text="Sala">
                                <cellValueFactory><PropertyValueFactory property="sala" />
                            </cellValueFactory></TableColumn>
                            <TableColumn fx:id="colAcoes" prefWidth="120.0" text="Ações" />
                        </columns>
                    </TableView>
                </children>
                <padding>
                    <Insets bottom="30.0" left="30.0" right="10.0" />
                </padding>
            </VBox>

            <VBox spacing="5.0">
                <children>
                    <Label text="Alunos da Turma Selecionada" style="-fx-font-size: 16px; -fx-padding: 0 0 5 0;" />
                    <TextField fx:id="alunoSearchField" promptText="Buscar aluno nesta turma..." />
                    <TableView fx:id="alunosTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn prefWidth="200.0" text="Nome do Aluno">
                                <cellValueFactory><PropertyValueFactory property="nomeCompleto" />
                            </cellValueFactory></TableColumn>
                            <TableColumn fx:id="colAcoesAluno" prefWidth="120.0" text="Ações" />
                        </columns>
                    </TableView>
                </children>
                <padding>
                    <Insets bottom="30.0" left="10.0" right="30.0" />
                </padding>
            </VBox>
            
        </SplitPane>
    </center>
</BorderPane>