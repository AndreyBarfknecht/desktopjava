<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="800.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.ConsultaCursosController">
   <top>
      <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Consulta de Cursos">
                 <styleClass>
                    <String fx:value="label" />
                    <String fx:value="titulo-janela" />
                 </styleClass>
            </Label>
            <TextField fx:id="searchField" maxWidth="400.0" promptText="Buscar por nome do curso..." />
         </children>
         <padding>
            <Insets bottom="20.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <TableView fx:id="cursosTableView" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn prefWidth="350.0" text="Nome do Curso">
              <cellValueFactory><PropertyValueFactory property="nomeCurso" /></cellValueFactory>
          </TableColumn>
          <TableColumn prefWidth="150.0" text="Nível">
              <cellValueFactory><PropertyValueFactory property="nivel" /></cellValueFactory>
          </TableColumn>
          <TableColumn prefWidth="250.0" text="Duração (Semestres)">
              <cellValueFactory><PropertyValueFactory property="duracaoSemestres" /></cellValueFactory>
          </TableColumn>
        </columns>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button onAction="#onEditar" prefWidth="120.0" styleClass="salvar-button" text="Editar" />
            <Button onAction="#onExcluir" prefWidth="120.0" styleClass="cancel-button" text="Excluir" />
            <Button onAction="#onFechar" prefWidth="120.0" text="Fechar" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>