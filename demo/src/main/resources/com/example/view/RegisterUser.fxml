<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="450.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.RegisterUserController" stylesheets="@../style.css">
   <children>
      <Label text="Registo de Novo Utilizador">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>

      <TextField fx:id="txtName" maxWidth="250.0" promptText="Nome Completo" />
      <TextField fx:id="txtEmail" maxWidth="250.0" promptText="E-mail" />
      <TextField fx:id="txtUsername" maxWidth="250.0" promptText="Nome de Utilizador" />
      <PasswordField fx:id="txtPassword" maxWidth="250.0" promptText="Senha" />
      <PasswordField fx:id="repeatPasswordField" maxWidth="250.0" promptText="Repita a Senha" />

      <Button onAction="#onSalvar" text="Salvar Registo" />
      <Button fx:id="cancelarButton" onAction="#onCancelar" prefWidth="100.0" text="Cancelar" styleClass="cancel-button" />
      <Label fx:id="lblMessage" textAlignment="CENTER" wrapText="true" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>