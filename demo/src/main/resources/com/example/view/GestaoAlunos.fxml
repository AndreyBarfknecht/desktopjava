<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1010.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.GestaoAlunosController">
    
    <top>
        <VBox spacing="20.0">
            <children>
                <Label text="Gestão de Alunos" styleClass="titulo-janela" />
                
                <HBox spacing="20.0">
                    <children>
                        <Button onAction="#onCadastrarNovoAluno" text="Cadastrar Novo Aluno" styleClass="acao-rapida-button">
                           <graphic>
                              <FontAwesomeIconView glyphName="PLUS" styleClass="acao-rapida-icon" size="1.5em"/>
                           </graphic>
                        </Button>
                        <!-- <Button onAction="#onMatricularAluno" text="Matricular Aluno" styleClass="acao-rapida-button">
                           <graphic>
                              <FontAwesomeIconView glyphName="ADDRESS_BOOK" styleClass="acao-rapida-icon" size="1.5em"/>
                           </graphic>
                        </Button> -->

                        <Button onAction="#onConsultarMatriculas" text="Consultar Matrículas" styleClass="acao-rapida-button">
                            <graphic>
                                <FontAwesomeIconView glyphName="LIST_ALT" styleClass="acao-rapida-icon" size="1.5em"/>
                            </graphic>
                        </Button>
                    </children>
                </HBox>
                
                <Label text="Consulta de Alunos" style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #2c3e50;" />
                
                <TextField fx:id="searchField" onAction="#onBuscar" maxWidth="400.0" promptText="Buscar por nome do aluno, CPF ou responsável..." />
                
            </children>
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="30.0" />
            </padding>
        </VBox>
    </top>
    
    <center>
        <TableView fx:id="alunosTableView" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn prefWidth="200.0" text="Nome Completo">
                    <cellValueFactory><PropertyValueFactory property="nomeCompleto" />
                </cellValueFactory></TableColumn>
                <TableColumn prefWidth="110.0" text="CPF">
                    <cellValueFactory><PropertyValueFactory property="cpf" />
                </cellValueFactory></TableColumn>
                <TableColumn prefWidth="110.0" text="Data de Nascimento">
                    <cellValueFactory><PropertyValueFactory property="dataNascimento" />
                </cellValueFactory></TableColumn>
                
                <TableColumn prefWidth="120.0" text="Telefone Aluno">
                    <cellValueFactory><PropertyValueFactory property="telefone" />
                </cellValueFactory></TableColumn>
                
                <TableColumn prefWidth="180.0" text="Email Aluno">
                    <cellValueFactory><PropertyValueFactory property="email" />
                </cellValueFactory></TableColumn>
                
                <TableColumn prefWidth="200.0" text="Responsável">
                    <cellValueFactory><PropertyValueFactory property="responsavel" />
                </cellValueFactory></TableColumn>
                
                <TableColumn prefWidth="120.0" text="Telefone Responsável">
                    <cellValueFactory><PropertyValueFactory property="telefoneResponsavel" />
                </cellValueFactory></TableColumn>
                
                <TableColumn fx:id="colAcoes" prefWidth="230.0" text="Ações" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="30.0" left="30.0" right="30.0" />
            </BorderPane.margin>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnPaginaAnterior" onAction="#onPaginaAnterior" text="Anterior" />
                <Label fx:id="lblStatusPaginacao" text="Página 1 de 1" />
                <Button fx:id="btnPaginaProxima" onAction="#onPaginaProxima" text="Próxima" />
            </children>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
    
</BorderPane>