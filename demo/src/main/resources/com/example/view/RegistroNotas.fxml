<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.RegistroNotasController" stylesheets="@../style.css">
    <top>
        <VBox alignment="CENTER" spacing="10.0">
            <children>
                <Label text="Registro de Notas">
                    <styleClass>
                        <String fx:value="label" />
                        <String fx:value="titulo-janela" />
                    </styleClass>
                </Label>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="Selecione a Turma:" />
                        <ComboBox fx:id="turmaComboBox" prefWidth="300.0" promptText="Escolha uma turma" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <HBox alignment="TOP_CENTER" spacing="20.0">
            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Alunos da Turma" />
                        <ListView fx:id="alunosListView" prefHeight="300.0" prefWidth="250.0" />
                    </children>
                </VBox>
                <VBox spacing="15.0">
                    <children>
                        <Label text="Lançar Nota para Aluno Selecionado" />
                        <GridPane hgap="10.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Disciplina:" />
                                
                                <ComboBox fx:id="disciplinaComboBox" prefWidth="310.0" promptText="Selecione a disciplina" GridPane.columnIndex="1" />
                                
                                <Label text="Avaliação:" GridPane.rowIndex="1" />
                                <TextField fx:id="avaliacaoField" promptText="Ex: Prova 1" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label text="Nota:" GridPane.rowIndex="2" />
                                <TextField fx:id="notaField" promptText="Ex: 8.5" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                            </children>
                        </GridPane>
                        <Button fx:id="salvarNotaButton" onAction="#salvarNota" prefWidth="310.0" text="Salvar Nota">
                            <styleClass>
                                <String fx:value="button" />
                                <String fx:value="salvar-button" />
                            </styleClass>
                        </Button>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button onAction="#onFechar" prefWidth="120.0" text="Fechar" styleClass="cancel-button" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>