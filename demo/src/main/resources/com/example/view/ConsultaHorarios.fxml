<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="800.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.ConsultaHorariosController">
    <top>
        <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Consulta de Horários">
                    <styleClass>
                        <String fx:value="label" />
                        <String fx:value="titulo-janela" />
                    </styleClass>
                </Label>
                <TextField fx:id="searchField" onAction="#onBuscar" maxWidth="400.0" promptText="Buscar por turma, professor, dia da semana..." />
            </children>
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <TableView fx:id="horariosTableView" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn prefWidth="180.0" text="Turma"> <cellValueFactory><PropertyValueFactory property="nomeTurma" /></cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="180.0" text="Professor"> <cellValueFactory><PropertyValueFactory property="nomeProfessor" /></cellValueFactory>
                </TableColumn>

                <TableColumn prefWidth="150.0" text="Disciplina">
                    <cellValueFactory><PropertyValueFactory property="nomeDisciplina" /></cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="120.0" text="Dia da Semana"> <cellValueFactory><PropertyValueFactory property="diaSemana" /></cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="80.0" text="Início"> <cellValueFactory><PropertyValueFactory property="horaInicio" /></cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="80.0" text="Fim"> <cellValueFactory><PropertyValueFactory property="horaFim" /></cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="150.0" text="Período Letivo">
                    <cellValueFactory><PropertyValueFactory property="nomePeriodoLetivo" /></cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </center>
    <bottom>
    <VBox alignment="CENTER" spacing="10.0">
        <children>
            <HBox alignment="CENTER" spacing="10.0">
                <children>
                    <Button fx:id="btnPaginaAnterior" onAction="#onPaginaAnterior" text="Anterior" />
                    <Label fx:id="lblStatusPaginacao" text="Página 1 de 1" />
                    <Button fx:id="btnPaginaProxima" onAction="#onPaginaProxima" text="Próxima" />
                </children>
            </HBox>
            
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <children>
                    <Button onAction="#onEditar" prefWidth="120.0" styleClass="salvar-button" text="Editar" />
                    <Button onAction="#onExcluir" prefWidth="120.0" styleClass="cancel-button" text="Excluir" />
                    <Button onAction="#onFechar" prefWidth="120.0" text="Fechar" />
                </children>
            </HBox>
        </children>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
        </padding>
    </VBox>
</bottom>
</BorderPane>