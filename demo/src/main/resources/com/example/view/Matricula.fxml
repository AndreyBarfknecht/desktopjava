<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.MatriculaController">
   <children>
      <VBox layoutX="25.0" layoutY="25.0" spacing="15.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">
         <children>
            <Label text="Nova Matrícula">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <HBox alignment="BOTTOM_LEFT" spacing="20.0">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Aluno" />
                        <ComboBox fx:id="alunoComboBox" prefWidth="250.0" promptText="Selecione o Aluno" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Turma" />
                        <ComboBox fx:id="turmaComboBox" prefWidth="250.0" promptText="Selecione a Turma" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Data da Matrícula" />
                        <DatePicker fx:id="dataMatriculaPicker" />
                     </children>
                  </VBox>
                  <Button fx:id="salvarButton" mnemonicParsing="false" onAction="#onSalvar" prefHeight="25.0" prefWidth="100.0" text="Matricular" />
               </children>
            </HBox>
         </children>
      </VBox>
      <TableView fx:id="matriculasTableView" layoutX="25.0" layoutY="180.0" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="180.0">
        <columns>
          <TableColumn prefWidth="250.0" text="Aluno">
              <cellValueFactory><PropertyValueFactory property="nomeAluno" /></cellValueFactory>
          </TableColumn>
          <TableColumn prefWidth="250.0" text="Turma">
              <cellValueFactory><PropertyValueFactory property="nomeTurma" /></cellValueFactory>
          </TableColumn>
            <TableColumn minWidth="0.0" prefWidth="120.0" text="Data Matrícula">
                <cellValueFactory><PropertyValueFactory property="dataMatricula" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="100.0" text="Status">
                <cellValueFactory><PropertyValueFactory property="status" /></cellValueFactory>
            </TableColumn>
        </columns>
      </TableView>
      <HBox alignment="CENTER_RIGHT" layoutX="575.0" layoutY="551.0" spacing="10.0" AnchorPane.bottomAnchor="25.0" AnchorPane.rightAnchor="25.0">
         <children>
            <Button fx:id="excluirButton" mnemonicParsing="false" onAction="#onExcluir" style="-fx-background-color: #f44336;" text="Excluir Matrícula" textFill="WHITE" />
         </children>
      </HBox>
   </children>
</AnchorPane>