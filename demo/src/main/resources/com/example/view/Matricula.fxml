<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.MatriculaController" stylesheets="@../style.css">
   <children>
      <Label text="Nova Matrícula">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <HBox alignment="BOTTOM_LEFT" spacing="20.0">
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label text="Aluno" />
                  <ComboBox fx:id="alunoComboBox" prefWidth="250.0" promptText="Selecione o Aluno" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Turma" />
                  <ComboBox fx:id="turmaComboBox" prefWidth="250.0" promptText="Selecione a Turma" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox>
         <VBox spacing="5.0">
            <children>
               <Label text="Data da Matrícula" />
               <DatePicker fx:id="dataMatriculaPicker" />
            </children>
         </VBox>
      </HBox>

      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="cancelarButton" onAction="#onCancelar" prefWidth="120.0" text="Cancelar" styleClass="cancel-button" />
            <Button fx:id="salvarButton" onAction="#onSalvar" prefWidth="120.0" text="Salvar Matrícula">
                <styleClass>
                    <String fx:value="button" />
                    <String fx:value="salvar-button" />
                </styleClass>
            </Button>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
</VBox>