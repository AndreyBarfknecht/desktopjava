                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Nova Turma:" />
                        <ComboBox fx:id="turmaComboBox" editable="true" prefWidth="450.0" promptText="Selecione a turma para matricular" GridPane.columnIndex="1" />
                    </children>
                </GridPane>
                
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button fx:id="cancelarButton" onAction="#onCancelar" prefWidth="120.0" text="Cancelar" styleClass="cancel-button" />
                        <Button fx:id="matricularButton" onAction="#onMatricular" prefWidth="120.0" text="Matricular" styleClass="salvar-button" />
                    </children>
                </HBox>
                
                <VBox spacing="10.0" style="-fx-padding: 10px 0 0 0;">
                     <children>
                        <Label text="Turmas Atuais do Aluno:">
                           <styleClass>
                              <String fx:value="label" />
                              <String fx:value="subtitulo" />
