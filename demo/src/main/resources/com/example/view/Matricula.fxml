<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.MatriculaController" stylesheets="@../style.css">
    <top>
        <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Matrícula de Alunos na Turma">
                    <styleClass>
                        <String fx:value="label" />
                        <String fx:value="titulo-janela" />
                    </styleClass>
                </Label>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="Selecione a Turma:" />
                        <ComboBox fx:id="turmaComboBox" prefWidth="300.0" promptText="Escolha uma turma" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Alunos Disponíveis" />
                        <ListView fx:id="alunosDisponiveisListView" prefHeight="250.0" prefWidth="250.0" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="matricularButton" onAction="#matricularAluno" prefWidth="50.0" text="&gt;" />
                        <Button fx:id="desmatricularButton" onAction="#desmatricularAluno" prefWidth="50.0" text="&lt;" />
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Alunos Matriculados" />
                        <ListView fx:id="alunosMatriculadosListView" prefHeight="250.0" prefWidth="250.0" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button onAction="#onCancelar" prefWidth="120.0" text="Fechar" styleClass="cancel-button" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>